@model IEnumerable<TechSocial.Models.TblCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <div class="tile">
        <div class="tile-body">
            <div class="row element-button">
                <div class="col-sm-2">
                    <a class="btn btn-add btn-sm"   asp-action="Create"  title="Thêm">
                        <i class="fas fa-plus"></i>
                    Tạo Category
                    </a>
                </div>
            </div>
            <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                    <tr>
                        <th width="10"><input type="checkbox" id="all"></th>
                       
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                    <tr>
                        <td width="10"><input type="checkbox" name="check1" value="1"></td>
                            <td>    @Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>  @Html.DisplayFor(modelItem => item.Description)</td>
                        
                        <td>
                                <a class="btn btn-primary btn-sm trash" title="Xóa" asp-action="Delete" asp-route-id="@item.CategoryId">
                                 
                                <i class="fas fa-trash-alt"></i>
                            </a>
                                <a class="btn btn-primary btn-sm edit" asp-action="Edit" asp-route-id="@item.CategoryId" title="Sửa" 
                                    data-target="#ModalUP">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
