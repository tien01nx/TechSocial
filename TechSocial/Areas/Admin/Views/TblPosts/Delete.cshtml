@model TechSocial.Models.TblPost

@{
    ViewData["Title"] = "Delete";
}



<div class="col-md-12">
    <div class="tile">

        <form asp-action="Delete">

            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                        <p class="btn btn-add btn-sm">
                            <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                            Quản lý bài viết
                        </p>
                    </div>

                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"> @Html.DisplayNameFor(model => model.Title)</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.CreatedAt)</label>
                    @* <input asp-for="CreatedAt" class="form-control" /> *@
                    <p>@Model.CreatedAt</p>
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.CategoryId) </label>
                    <p>@ViewData["CategoryName"]</p>
                </div>
               @*  <div class="form-group">
                    <label class="control-label"> @Html.DisplayNameFor(model => model.AccountId) </label>
                    <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                </div> *@
                <div class="form-group">
                    <label class="control-label"> @Html.DisplayNameFor(model => model.Content)</label>
                      @Html.Raw(Model.Content)
                    
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.ImgSrc)</label>
                    <img width="100" height="160"
                        src=" @Model.ImgSrc">
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.PostsView)</label>
                    <input asp-for="PostsView" class="form-control" />
                    <span asp-validation-for="PostsView" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Comments)</label>
                    <input asp-for="Comments" class="form-control" />
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PostId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>

            </div>
        </form>
    </div>
</div>









